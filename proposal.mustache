                    <div class="col-4">
                    	Sq Ft.
                    </div>        
        		</div>
        		
        	   <div class="row">
        	       <div class="col-4">
        	           {{images.row1}}
        	       </div>
        	       <div class="col-4">
        	           {{locations.row1}}
        	       </div>
        	       <div class="col-4">
        	           {{locations.sqft1}}
